{
  "version": 2,
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/**/*.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api/generate-pdf$",
      "dest": "/api/generate-pdf.mjs"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^/(?!api)(.*)$",
      "dest": "/index.html"
    }
  ]
}